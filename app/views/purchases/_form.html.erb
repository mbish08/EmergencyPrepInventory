<%= render partial: 'layouts/errors', locals: { obj: @purchase} %>

<h2>Update your supply quantity here</h2>

<%= form_for @purchase do |f| %>
    <%= display_item_fields(f) %>
    <%= f.label :quantity, "Quantity of supply:" %>
    <%= f.text_field :quantity %>
    <br>
    <%= f.submit "Update inventory" %>
<% end %>