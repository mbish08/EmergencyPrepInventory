<%= render partial: 'layouts/errors', locals: { obj: @item} %>

<%= form_for @item do |f| %>
   <%= display_type_fields(f) %>
    <%= f.label :name, "Name of item:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.fields_for :purchase do |p| %>
        <%= p.label :quantity, "Quantity:" %>
        <%= p.number_field :quantity %>
    <% end %>
    <br>
    <%= f.submit %>
<% end %>