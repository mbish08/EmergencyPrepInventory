<%= form_for @item do |f| %>
    <%= f.label :type, "Type of storage:" %>
    <%= f.fields_for :type do |t| %>
        <%= f.collection_select :type_id, Type.all, :id, :name, prompt: true %>
        <%= f.label :name, "Add a new storage type, if not listed" %>
        <%= t.text_field :name %>
    <% end %>
    <br>
    <%= f.label :name, "Name of item:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :quantity, "Quantity:" %>
    <%= f.number_field :quantity %>
    <br>
    <%= f.submit %>
<% end %>